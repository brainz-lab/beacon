<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <title>Beacon - <%= content_for(:title) || "Uptime Monitoring" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= action_cable_meta_tag %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    :root {
      --color-cream-50: #FAF9F7;
      --color-cream-100: #F5F3EF;
      --color-cream-200: #E8E5E0;
      --color-ink-900: #1A1A1A;
      --color-ink-700: #3D3D3D;
      --color-ink-600: #525252;
      --color-ink-500: #6B6B6B;
      --color-ink-400: #8B8780;
      --color-ink-300: #A8A29E;
      --color-beacon: #10B981;
      --color-beacon-dark: #059669;
      --color-success: #22C55E;
      --color-warning: #F59E0B;
      --color-error: #EF4444;
    }
    body { font-family: 'Inter', system-ui, sans-serif; }
  </style>
</head>
<body class="h-full antialiased" style="background: var(--color-cream-50);">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 border-r flex flex-col" style="border-color: var(--color-cream-200); background: #FFFFFE;">
      <div class="p-5 border-b" style="border-color: var(--color-cream-100);">
        <%= link_to dashboard_root_path, class: "flex items-center gap-2.5" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--color-beacon);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="8"/>
              <path d="M9 12l2 2 4-4" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <span class="font-semibold" style="color: var(--color-ink-900);">Beacon</span>
        <% end %>
      </div>

      <% if @project&.persisted? %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b" style="border-color: var(--color-cream-100);">
          <%= link_to dashboard_projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg hover:bg-[var(--color-cream-100)] transition" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: var(--color-cream-200); color: var(--color-ink-600);">
              <%= @project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate" style="color: var(--color-ink-700);"><%= @project.name %></span>
            <svg class="w-4 h-4" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <% overview_active = controller_name == 'overview' %>
          <%= link_to dashboard_project_overview_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{overview_active ? 'background: rgba(16, 185, 129, 0.1); color: var(--color-beacon);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
            Overview
          <% end %>

          <% monitors_active = controller_name == 'monitors' %>
          <%= link_to dashboard_project_monitors_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{monitors_active ? 'background: rgba(16, 185, 129, 0.1); color: var(--color-beacon);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Monitors
          <% end %>

          <% incidents_active = controller_name == 'incidents' %>
          <%= link_to dashboard_project_incidents_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{incidents_active ? 'background: rgba(16, 185, 129, 0.1); color: var(--color-beacon);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            Incidents
          <% end %>

          <% status_pages_active = controller_name == 'status_pages' %>
          <%= link_to dashboard_project_status_pages_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{status_pages_active ? 'background: rgba(16, 185, 129, 0.1); color: var(--color-beacon);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Status Pages
          <% end %>

          <% maintenance_active = controller_name == 'maintenance_windows' %>
          <%= link_to dashboard_project_maintenance_windows_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{maintenance_active ? 'background: rgba(16, 185, 129, 0.1); color: var(--color-beacon);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Maintenance
          <% end %>

          <% setup_active = controller_name == 'setup' %>
          <%= link_to dashboard_project_setup_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{setup_active ? 'background: rgba(16, 185, 129, 0.1); color: var(--color-beacon);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Setup
          <% end %>
        </nav>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3" style="color: var(--color-ink-400);">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <% if defined?(current_user) && current_user %>
        <div class="p-4 border-t" style="border-color: var(--color-cream-100);">
          <div class="flex items-center gap-3">
            <div class="w-9 h-9 rounded-full flex items-center justify-center text-sm font-semibold" style="background: rgba(16, 185, 129, 0.15); color: var(--color-beacon);">
              <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium truncate" style="color: var(--color-ink-900);"><%= current_user.name || current_user.email.split('@').first %></p>
              <p class="text-xs truncate" style="color: var(--color-ink-500);"><%= current_user.email %></p>
            </div>
          </div>
        </div>
      <% end %>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto">
      <% if notice %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-sm font-medium" style="background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.2); color: #166534;">
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-sm font-medium" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #991B1B;">
          <%= alert %>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
