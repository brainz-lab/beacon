<% content_for(:title) { "Maintenance Windows" } %>

<div class="space-y-6">
  <div class="md:flex md:items-center md:justify-between">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl">Maintenance Windows</h2>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to "Schedule Maintenance", new_dashboard_maintenance_window_path, class: "inline-flex items-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500" %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg p-4">
    <div class="flex flex-wrap gap-2">
      <%= link_to "All", dashboard_maintenance_windows_path, class: "#{params[:status].nil? ? 'bg-gray-900 text-white' : 'bg-gray-100 text-gray-700'} rounded-md px-3 py-2 text-sm font-medium" %>
      <%= link_to "Upcoming", dashboard_maintenance_windows_path(status: "upcoming"), class: "#{params[:status] == 'upcoming' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700'} rounded-md px-3 py-2 text-sm font-medium" %>
      <%= link_to "Active", dashboard_maintenance_windows_path(status: "active"), class: "#{params[:status] == 'active' ? 'bg-yellow-500 text-white' : 'bg-gray-100 text-gray-700'} rounded-md px-3 py-2 text-sm font-medium" %>
      <%= link_to "Past", dashboard_maintenance_windows_path(status: "past"), class: "#{params[:status] == 'past' ? 'bg-gray-600 text-white' : 'bg-gray-100 text-gray-700'} rounded-md px-3 py-2 text-sm font-medium" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <% if @maintenance_windows.any? %>
      <ul class="divide-y divide-gray-200">
        <% @maintenance_windows.each do |window| %>
          <li class="p-6 hover:bg-gray-50">
            <div class="flex items-center justify-between">
              <div>
                <%= link_to window.title, dashboard_maintenance_window_path(window), class: "text-lg font-medium text-gray-900 hover:text-emerald-600" %>
                <div class="flex items-center space-x-4 text-sm text-gray-500 mt-1">
                  <span><%= window.starts_at.strftime("%b %d, %Y %H:%M") %> - <%= window.ends_at.strftime("%H:%M %Z") %></span>
                  <span>•</span>
                  <span><%= window.duration_humanized %></span>
                  <span>•</span>
                  <span><%= window.affects_all_monitors ? "All monitors" : pluralize(window.monitor_ids.count, "monitor") %></span>
                </div>
              </div>
              <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium <%= window_status_class(window.status) %>">
                <%= window.status %>
              </span>
            </div>
            <% if window.description.present? %>
              <p class="mt-2 text-sm text-gray-600"><%= truncate(window.description, length: 150) %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No maintenance windows</h3>
        <p class="mt-1 text-sm text-gray-500">Schedule maintenance to notify subscribers in advance.</p>
        <div class="mt-6">
          <%= link_to "Schedule Maintenance", new_dashboard_maintenance_window_path, class: "inline-flex items-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
