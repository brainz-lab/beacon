<% content_for(:title) { "Maintenance" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[22px] font-semibold tracking-tight text-primary">Maintenance Windows</h1>
      <p class="mt-1 text-[13px] text-muted">Schedule maintenance to notify subscribers in advance</p>
    </div>
    <%= link_to new_dashboard_project_maintenance_window_path(@project), class: "inline-flex items-center gap-2 px-4 py-2 text-[13px] font-medium rounded-lg transition-colors btn-primary text-white" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Schedule Maintenance
    <% end %>
  </div>

  <!-- Filters -->
  <div class="p-4 rounded-xl card">
    <div class="flex flex-wrap gap-2">
      <%= link_to "All", dashboard_project_maintenance_windows_path(@project),
          class: "px-3 py-1.5 text-[13px] font-medium rounded-lg transition-colors #{params[:status].nil? ? 'filter-pill active' : 'filter-pill'}" %>
      <%= link_to "Upcoming", dashboard_project_maintenance_windows_path(@project, status: "upcoming"),
          class: "px-3 py-1.5 text-[13px] font-medium rounded-lg transition-colors",
          style: params[:status] == "upcoming" ? "background: var(--status-info); color: white;" : "background: var(--bg-muted); color: var(--text-secondary);" %>
      <%= link_to "Active", dashboard_project_maintenance_windows_path(@project, status: "active"),
          class: "px-3 py-1.5 text-[13px] font-medium rounded-lg transition-colors",
          style: params[:status] == "active" ? "background: var(--status-warning); color: white;" : "background: var(--bg-muted); color: var(--text-secondary);" %>
      <%= link_to "Past", dashboard_project_maintenance_windows_path(@project, status: "past"),
          class: "px-3 py-1.5 text-[13px] font-medium rounded-lg transition-colors",
          style: params[:status] == "past" ? "background: var(--status-neutral); color: white;" : "background: var(--bg-muted); color: var(--text-secondary);" %>
    </div>
  </div>

  <div class="rounded-xl overflow-hidden card">
    <% if @maintenance_windows.any? %>
      <div class="divide-y divider">
        <% @maintenance_windows.each do |window| %>
          <div class="p-5 table-row transition-colors">
            <div class="flex items-center justify-between">
              <div>
                <%= link_to window.title, dashboard_project_maintenance_window_path(@project, window), class: "text-[14px] font-medium hover:opacity-70 transition-opacity text-primary" %>
                <div class="flex items-center gap-2 mt-1 text-[12px] text-muted">
                  <span><%= window.starts_at.strftime("%b %d, %Y %H:%M") %> - <%= window.ends_at.strftime("%H:%M %Z") %></span>
                  <span>&middot;</span>
                  <span><%= window.duration_humanized %></span>
                  <span>&middot;</span>
                  <span><%= window.affects_all_monitors ? "All monitors" : pluralize(window.monitor_ids.count, "monitor") %></span>
                </div>
              </div>
              <span class="badge <%= window.status == 'upcoming' ? 'badge-info' : (window.status == 'active' ? 'badge-warning' : 'badge-neutral') %>">
                <%= window.status %>
              </span>
            </div>
            <% if window.description.present? %>
              <p class="mt-2 text-[13px] text-muted"><%= truncate(window.description, length: 150) %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto w-12 h-12 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <h3 class="mt-3 text-[14px] font-medium text-primary">No maintenance windows</h3>
        <p class="mt-1 text-[13px] text-muted">Schedule maintenance to notify subscribers in advance.</p>
        <div class="mt-6">
          <%= link_to new_dashboard_project_maintenance_window_path(@project), class: "inline-flex items-center gap-2 px-4 py-2 text-[13px] font-medium rounded-lg transition-colors btn-primary text-white" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Schedule Maintenance
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
