<% content_for(:title) { "Setup Beacon" } %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-emerald-600">âš¡ Beacon</h1>
      <h2 class="mt-6 text-2xl font-bold text-gray-900">Welcome to Beacon</h2>
      <p class="mt-2 text-sm text-gray-600">Let's set up your uptime monitoring project</p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <%= form_with model: @project, url: dashboard_setup_path, class: "space-y-6" do |f| %>
        <% if @project.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <ul class="list-disc pl-5 text-sm text-red-700">
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Project Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "My Project", autofocus: true %>
        </div>

        <div>
          <%= f.label :platform_project_id, "Platform Project ID (optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :platform_project_id, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "Connect to Brainz Lab Platform" %>
          <p class="mt-1 text-xs text-gray-500">Leave blank if not using Platform integration</p>
        </div>

        <div>
          <%= f.label :timezone, class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :timezone, ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] },
              { selected: "UTC" },
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.submit "Get Started", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
