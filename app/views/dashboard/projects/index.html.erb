<% content_for(:title) { "Projects" } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[22px] font-semibold tracking-tight text-primary">Projects</h1>
      <p class="mt-1 text-[13px] text-muted">Manage your uptime monitoring projects</p>
    </div>
    <a href="<%= new_dashboard_project_path %>" class="btn-primary inline-flex items-center gap-2 px-4 py-2.5 text-[13px] font-medium rounded-xl transition-all text-white">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      New Project
    </a>
  </div>

  <% if @projects.any? %>
    <div class="space-y-2">
      <% @projects.each do |project| %>
        <a href="<%= dashboard_project_overview_path(project) %>" class="block group">
          <div class="px-5 py-4 rounded-xl transition-all dm-row">
            <div class="flex items-center justify-between">
              <div class="space-y-1">
                <h3 class="text-[15px] font-medium group-hover:underline text-primary"><%= project.name || "Unnamed Project" %></h3>
                <div class="flex items-center gap-4 text-[12px] text-muted">
                  <span><%= project.uptime_monitors.count %> monitors</span>
                  <span class="flex items-center gap-1.5">
                    <span class="h-1.5 w-1.5 rounded-full status-indicator-success"></span>
                    <%= project.uptime_monitors.up.count %> healthy
                  </span>
                  <span class="flex items-center gap-1.5">
                    <span class="h-1.5 w-1.5 rounded-full status-indicator-error"></span>
                    <%= project.uptime_monitors.down.count %> down
                  </span>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <% status = project.uptime_monitors.down.any? ? "down" : (project.uptime_monitors.degraded.any? ? "degraded" : "up") %>
                <span class="badge <%= status == 'up' ? 'badge-success' : (status == 'degraded' ? 'badge-warning' : 'badge-error') %>">
                  <%= status == 'up' ? 'All systems operational' : (status == 'degraded' ? 'Degraded' : 'Issues detected') %>
                </span>
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" class="text-muted">
                  <path d="M6 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
              </div>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 rounded-xl card">
      <div class="space-y-3">
        <div class="w-16 h-16 mx-auto rounded-2xl flex items-center justify-center empty-state-icon">
          <svg class="w-8 h-8" style="color: var(--accent-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <p class="text-[15px] font-medium text-primary">No projects yet</p>
        <p class="text-[13px] text-muted">Create your first project to start monitoring uptime</p>
        <a href="<%= new_dashboard_project_path %>" class="btn-primary inline-flex items-center gap-2 mt-4 px-5 py-2.5 text-[13px] font-medium rounded-xl transition-all text-white">
          Create your first project
        </a>
      </div>
    </div>
  <% end %>
</div>
