<% content_for(:title) { "New Project" } %>

<div class="max-w-lg mx-auto">
  <div class="mb-8">
    <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Create a new project</h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Set up a new uptime monitoring project</p>
  </div>

  <%= form_with model: @project, url: dashboard_projects_path, class: "space-y-6" do |f| %>
    <% if @project.errors.any? %>
      <div class="px-4 py-3 rounded-lg text-[14px]" style="background: #FEE8E8; color: #8B2D2D;">
        <ul class="list-disc list-inside space-y-1">
          <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-5 p-6 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <div>
        <%= f.label :name, class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
        <%= f.text_field :name,
            class: "w-full px-3 py-2 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-[#10B981]",
            style: "border: 1px solid #E8E5E0; background: #FFFFFE; color: #1A1A1A;",
            placeholder: "My Website",
            autofocus: true %>
        <p class="mt-1 text-[12px]" style="color: #8B8780;">A descriptive name for your monitoring project</p>
      </div>

      <div>
        <%= f.label :timezone, class: "block text-[13px] font-medium mb-2", style: "color: #1A1A1A;" %>
        <%= f.time_zone_select :timezone,
            ActiveSupport::TimeZone.all,
            { default: "UTC" },
            class: "w-full px-3 py-2 text-[14px] rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-[#10B981]",
            style: "border: 1px solid #E8E5E0; background: #FFFFFE; color: #1A1A1A;" %>
        <p class="mt-1 text-[12px]" style="color: #8B8780;">Timezone for reports and incident timestamps</p>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "Cancel", dashboard_projects_path, class: "text-[13px] font-medium transition-colors", style: "color: #8B8780;" %>
      <%= f.submit "Create Project", class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors cursor-pointer", style: "background: #1A1A1A; color: #FFFFFE;" %>
    </div>
  <% end %>
</div>
