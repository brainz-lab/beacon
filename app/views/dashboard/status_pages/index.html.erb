<% content_for(:title) { "Status Pages" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Status Pages</h1>
      <p class="mt-1 text-[13px]" style="color: #8B8780;">Public status pages to share system health with users</p>
    </div>
    <%= link_to new_dashboard_project_status_page_path(@project), class: "inline-flex items-center gap-2 px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Create Status Page
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% @status_pages.each do |status_page| %>
      <div class="p-5 rounded-xl hover:shadow-sm transition-shadow" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-[15px] font-medium" style="color: #1A1A1A;"><%= status_page.name %></h3>
          <span class="px-2 py-0.5 text-[11px] font-medium rounded-full" style="<%= status_page.public? ? 'background: #E8F5E8; color: #2D5A2D;' : 'background: #F5F4F2; color: #6B6760;' %>">
            <%= status_page.public? ? "Public" : "Private" %>
          </span>
        </div>

        <div class="flex items-center gap-2 mb-4">
          <span class="h-2 w-2 rounded-full" style="background: <%= status_page.current_status == 'operational' ? '#10B981' : (status_page.current_status == 'degraded' ? '#F59E0B' : '#EF4444') %>;"></span>
          <span class="text-[13px]" style="color: #6B6760;"><%= status_page.current_status&.humanize || "Unknown" %></span>
        </div>

        <div class="text-[13px] space-y-1" style="color: #8B8780;">
          <p><%= status_page.uptime_monitors.count %> monitors</p>
          <p><%= status_page.confirmed_subscriptions.count %> subscribers</p>
        </div>

        <div class="mt-4 pt-4 flex items-center justify-between" style="border-top: 1px solid #E8E5E0;">
          <%= link_to "Configure", dashboard_project_status_page_path(@project, status_page), class: "text-[13px] font-medium hover:opacity-70 transition-opacity", style: "color: #1A1A1A;" %>
          <% if status_page.public? %>
            <%= link_to "View Public Page", public_status_path(status_page.slug), target: "_blank", class: "text-[13px] font-medium hover:opacity-70 transition-opacity", style: "color: #10B981;" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @status_pages.empty? %>
      <div class="col-span-full text-center py-12 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <svg class="mx-auto w-12 h-12" style="color: #C4C1BC;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="mt-3 text-[14px] font-medium" style="color: #1A1A1A;">No status pages</h3>
        <p class="mt-1 text-[13px]" style="color: #8B8780;">Create a status page to share your system status with users.</p>
        <div class="mt-6">
          <%= link_to new_dashboard_project_status_page_path(@project), class: "inline-flex items-center gap-2 px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Create Status Page
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
