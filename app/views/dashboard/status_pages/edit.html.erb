<% content_for(:title) { "Edit #{@status_page.name}" } %>

<div class="max-w-2xl mx-auto space-y-6">
  <div>
    <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Edit Status Page</h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Update status page settings and branding</p>
  </div>

  <%= render "form", status_page: @status_page %>

  <div class="p-6 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
    <h3 class="text-[14px] font-medium" style="color: #8B2D2D;">Danger Zone</h3>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Deleting this status page will remove all subscriber data.</p>
    <div class="mt-4">
      <%= button_to "Delete Status Page", dashboard_project_status_page_path(@project, @status_page),
          method: :delete,
          data: { turbo_confirm: "Are you sure? This cannot be undone." },
          class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors",
          style: "background: #FEE8E8; color: #8B2D2D;" %>
    </div>
  </div>
</div>
