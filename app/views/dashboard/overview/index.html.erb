<% content_for(:title) { "Overview" } %>

<div class="space-y-8">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Overview</h1>
      <p class="mt-1 text-[13px]" style="color: #8B8780;">Monitor status and recent activity</p>
    </div>
    <a href="<%= new_dashboard_project_monitor_path(@project) %>" class="inline-flex items-center gap-2 px-4 py-2 text-[13px] font-medium rounded-lg transition-colors" style="background: #1A1A1A; color: #FFFFFE;">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Monitor
    </a>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Total Monitors</p>
      <p class="mt-1 text-[28px] font-semibold" style="color: #1A1A1A;"><%= @stats[:total_monitors] %></p>
    </div>
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Healthy</p>
      <p class="mt-1 text-[28px] font-semibold" style="color: #10B981;"><%= @stats[:healthy] %></p>
    </div>
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Active Incidents</p>
      <p class="mt-1 text-[28px] font-semibold" style="color: <%= @stats[:active_incidents] > 0 ? '#EF4444' : '#1A1A1A' %>;"><%= @stats[:active_incidents] %></p>
    </div>
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Uptime (30d)</p>
      <p class="mt-1 text-[28px] font-semibold" style="color: #1A1A1A;"><%= @stats[:overall_uptime] %>%</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Active Incidents -->
    <div class="rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <div class="px-5 py-4" style="border-bottom: 1px solid #E8E5E0;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Active Incidents</h2>
      </div>
      <div class="px-5 py-4">
        <% if @active_incidents.any? %>
          <div class="space-y-3">
            <% @active_incidents.each do |incident| %>
              <a href="<%= dashboard_project_incident_path(@project, incident) %>" class="block p-3 rounded-lg transition-colors hover:opacity-90" style="background: #FEE8E8;">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-[14px] font-medium" style="color: #8B2D2D;"><%= incident.title %></p>
                    <p class="text-[12px]" style="color: #B45555;"><%= incident.uptime_monitor.name %> &middot; <%= time_ago_in_words(incident.started_at) %> ago</p>
                  </div>
                  <span class="px-2 py-0.5 text-[11px] font-medium rounded-full" style="background: #FECACA; color: #8B2D2D;"><%= incident.status %></span>
                </div>
              </a>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto w-10 h-10" style="color: #C4C1BC;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="mt-2 text-[13px]" style="color: #6B6760;">All systems operational</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Monitors -->
    <div class="rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <div class="px-5 py-4 flex items-center justify-between" style="border-bottom: 1px solid #E8E5E0;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Monitors</h2>
        <a href="<%= dashboard_project_monitors_path(@project) %>" class="text-[13px] font-medium" style="color: #8B8780;">View all</a>
      </div>
      <div class="divide-y" style="border-color: #E8E5E0;">
        <% @monitors.limit(8).each do |monitor| %>
          <a href="<%= dashboard_project_monitor_path(@project, monitor) %>" class="flex items-center justify-between px-5 py-3 hover:bg-[#FAF9F7] transition-colors">
            <div class="flex items-center gap-3 min-w-0">
              <span class="h-2 w-2 rounded-full flex-shrink-0" style="background: <%= monitor.status == 'up' ? '#10B981' : (monitor.status == 'degraded' ? '#F59E0B' : '#EF4444') %>;"></span>
              <span class="text-[14px] truncate" style="color: #1A1A1A;"><%= monitor.name %></span>
            </div>
            <div class="flex items-center gap-3">
              <% if monitor.last_response_time %>
                <span class="text-[13px]" style="color: #8B8780;"><%= monitor.last_response_time %>ms</span>
              <% end %>
              <span class="px-2 py-0.5 text-[11px] font-medium rounded-full" style="<%= monitor.status == 'up' ? 'background: #E8F5E8; color: #2D5A2D;' : (monitor.status == 'degraded' ? 'background: #FEF3C7; color: #92400E;' : 'background: #FEE8E8; color: #8B2D2D;') %>">
                <%= monitor.status %>
              </span>
            </div>
          </a>
        <% end %>
        <% if @monitors.empty? %>
          <div class="text-center py-8">
            <p class="text-[13px]" style="color: #8B8780;">No monitors yet</p>
            <a href="<%= new_dashboard_project_monitor_path(@project) %>" class="text-[13px] font-medium" style="color: #10B981;">Add your first monitor</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Upcoming Maintenance -->
  <% if @maintenance_windows.any? %>
    <div class="rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <div class="px-5 py-4" style="border-bottom: 1px solid #E8E5E0;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Upcoming Maintenance</h2>
      </div>
      <div class="divide-y" style="border-color: #E8E5E0;">
        <% @maintenance_windows.each do |window| %>
          <a href="<%= dashboard_project_maintenance_window_path(@project, window) %>" class="flex items-center justify-between px-5 py-3 hover:bg-[#FAF9F7] transition-colors">
            <div>
              <p class="text-[14px]" style="color: #1A1A1A;"><%= window.title %></p>
              <p class="text-[12px]" style="color: #8B8780;"><%= window.starts_at.strftime("%b %d, %Y %H:%M") %> - <%= window.ends_at.strftime("%H:%M %Z") %></p>
            </div>
            <span class="px-2 py-0.5 text-[11px] font-medium rounded-full" style="background: #DBEAFE; color: #1E40AF;">Scheduled</span>
          </a>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
