<% content_for(:title) { @incident.title } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <div class="flex items-center space-x-3">
        <span class="inline-flex items-center justify-center h-10 w-10 rounded-full <%= severity_color_class(@incident.severity) %>">
          <span class="text-sm font-medium text-white"><%= @incident.severity[0..1].upcase %></span>
        </span>
        <div>
          <h2 class="text-2xl font-bold leading-7 text-gray-900"><%= @incident.title %></h2>
          <p class="text-sm text-gray-500">
            <%= @monitor.name %> â€¢ Started <%= @incident.started_at.strftime("%b %d, %Y at %H:%M %Z") %>
          </p>
        </div>
      </div>
    </div>
    <div class="mt-4 flex space-x-2 md:ml-4 md:mt-0">
      <% unless @incident.resolved? %>
        <%= button_to "Resolve", resolve_dashboard_incident_path(@incident), method: :post, class: "inline-flex items-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500" %>
      <% end %>
      <%= link_to "Edit", edit_dashboard_incident_path(@incident), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Status -->
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Status</h3>
              <p class="mt-1 text-3xl font-semibold <%= @incident.resolved? ? 'text-green-600' : 'text-red-600' %>">
                <%= @incident.status.humanize %>
              </p>
            </div>
            <div class="text-right">
              <p class="text-sm text-gray-500">Duration</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @incident.duration_humanized %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Timeline -->
      <div class="overflow-hidden rounded-lg bg-white shadow" id="incident_updates">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Timeline</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <div class="flow-root">
            <ul class="-mb-8">
              <% @updates.each_with_index do |update, index| %>
                <li>
                  <div class="relative pb-8">
                    <% unless index == @updates.size - 1 %>
                      <span class="absolute left-4 top-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                    <% end %>
                    <div class="relative flex space-x-3">
                      <div>
                        <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white <%= update_status_color(update.status) %>">
                          <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                          </svg>
                        </span>
                      </div>
                      <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                        <div>
                          <p class="text-sm font-medium text-gray-900"><%= update.status.humanize %></p>
                          <p class="mt-1 text-sm text-gray-600"><%= update.message %></p>
                        </div>
                        <div class="whitespace-nowrap text-right text-sm text-gray-500">
                          <%= update.created_at.strftime("%H:%M") %>
                          <br>
                          <span class="text-xs"><%= update.created_by %></span>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <!-- Add Update -->
      <% unless @incident.resolved? %>
        <div class="overflow-hidden rounded-lg bg-white shadow" id="update_form">
          <%= render "dashboard/incidents/update_form", incident: @incident %>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Details -->
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Details</h3>
        </div>
        <dl class="divide-y divide-gray-200">
          <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Severity</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= severity_badge_class(@incident.severity) %>">
                <%= @incident.severity %>
              </span>
            </dd>
          </div>
          <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Started</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @incident.started_at.strftime("%b %d, %H:%M") %></dd>
          </div>
          <% if @incident.resolved? %>
            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Resolved</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @incident.resolved_at.strftime("%b %d, %H:%M") %></dd>
            </div>
          <% end %>
          <% if @incident.root_cause.present? %>
            <div class="px-4 py-3 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Root Cause</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @incident.root_cause %></dd>
            </div>
          <% end %>
          <% if @incident.resolution_notes.present? %>
            <div class="px-4 py-3 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Resolution</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @incident.resolution_notes %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- Affected Monitor -->
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Affected Monitor</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center">
            <span class="h-3 w-3 rounded-full mr-3 <%= status_dot_class(@monitor.status) %>"></span>
            <%= link_to @monitor.name, dashboard_monitor_path(@monitor), class: "text-sm font-medium text-gray-900 hover:text-emerald-600" %>
          </div>
          <p class="text-sm text-gray-500 mt-1"><%= @monitor.url || @monitor.host %></p>
        </div>
      </div>
    </div>
  </div>
</div>
