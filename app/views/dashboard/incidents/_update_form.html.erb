<div class="px-5 py-4" style="border-bottom: 1px solid #E8E5E0;">
  <h3 class="text-[15px] font-medium" style="color: #1A1A1A;">Add Update</h3>
</div>
<div class="px-5 py-5">
  <%= form_with url: dashboard_project_incident_updates_path(@project, incident), class: "space-y-4" do |f| %>
    <div>
      <%= f.label :status, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
      <%= f.select :status, [["Investigating", "investigating"], ["Identified", "identified"], ["Monitoring", "monitoring"], ["Resolved", "resolved"]],
          {}, class: "mt-1 block w-full px-3 py-2 text-[13px] rounded-lg focus:outline-none focus:ring-2", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
    </div>
    <div>
      <%= f.label :message, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
      <%= f.text_area :message, rows: 3, class: "mt-1 block w-full px-3 py-2 text-[13px] rounded-lg focus:outline-none focus:ring-2", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "Describe the current status..." %>
    </div>
    <div class="flex justify-end">
      <%= f.submit "Post Update", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
    </div>
  <% end %>
</div>
