<div class="px-4 py-5 sm:px-6 border-b border-gray-200">
  <h3 class="text-lg font-medium leading-6 text-gray-900">Add Update</h3>
</div>
<div class="px-4 py-5 sm:p-6">
  <%= form_with url: dashboard_incident_updates_path(incident), class: "space-y-4" do |f| %>
    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, [["Investigating", "investigating"], ["Identified", "identified"], ["Monitoring", "monitoring"], ["Resolved", "resolved"]],
          {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :message, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :message, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "Describe the current status..." %>
    </div>
    <div class="flex justify-end">
      <%= f.submit "Post Update", class: "rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
