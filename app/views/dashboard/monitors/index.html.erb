<% content_for(:title) { "Monitors" } %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[22px] font-semibold tracking-tight text-primary">Monitors</h1>
      <p class="mt-1 text-[13px] text-muted">Track uptime for your endpoints, APIs, and services</p>
    </div>
    <%= link_to new_dashboard_project_monitor_path(@project), class: "btn-primary inline-flex items-center gap-2 px-4 py-2.5 text-[13px] font-medium rounded-xl transition-all text-white" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Monitor
    <% end %>
  </div>

  <!-- Filters -->
  <div class="p-4 rounded-xl card">
    <div class="flex flex-wrap gap-2">
      <%= link_to "All", dashboard_project_monitors_path(@project),
          class: "px-3.5 py-2 text-[13px] font-medium rounded-xl transition-all #{params[:status].nil? ? 'filter-pill active' : 'filter-pill'}" %>
      <%= link_to "Healthy", dashboard_project_monitors_path(@project, status: "healthy"),
          class: "px-3.5 py-2 text-[13px] font-medium rounded-xl transition-all",
          style: params[:status] == "healthy" ? "background: var(--status-success); color: white;" : "background: var(--bg-muted); color: var(--text-secondary);" %>
      <%= link_to "Degraded", dashboard_project_monitors_path(@project, status: "degraded"),
          class: "px-3.5 py-2 text-[13px] font-medium rounded-xl transition-all",
          style: params[:status] == "degraded" ? "background: var(--status-warning); color: white;" : "background: var(--bg-muted); color: var(--text-secondary);" %>
      <%= link_to "Down", dashboard_project_monitors_path(@project, status: "down"),
          class: "px-3.5 py-2 text-[13px] font-medium rounded-xl transition-all",
          style: params[:status] == "down" ? "background: var(--status-error); color: white;" : "background: var(--bg-muted); color: var(--text-secondary);" %>
      <%= link_to "Paused", dashboard_project_monitors_path(@project, status: "paused"),
          class: "px-3.5 py-2 text-[13px] font-medium rounded-xl transition-all",
          style: params[:status] == "paused" ? "background: var(--status-neutral); color: white;" : "background: var(--bg-muted); color: var(--text-secondary);" %>
    </div>
  </div>

  <!-- Monitor List -->
  <div class="rounded-xl overflow-hidden card">
    <% if @monitors.any? %>
      <table class="min-w-full">
        <thead class="table-header">
          <tr>
            <th class="px-5 py-3.5 text-left text-[11px] font-semibold uppercase tracking-wider text-muted">Monitor</th>
            <th class="px-5 py-3.5 text-left text-[11px] font-semibold uppercase tracking-wider text-muted">Type</th>
            <th class="px-5 py-3.5 text-left text-[11px] font-semibold uppercase tracking-wider text-muted">Status</th>
            <th class="px-5 py-3.5 text-left text-[11px] font-semibold uppercase tracking-wider text-muted">Response</th>
            <th class="px-5 py-3.5 text-left text-[11px] font-semibold uppercase tracking-wider text-muted">Last Check</th>
            <th class="px-5 py-3.5 text-right text-[11px] font-semibold uppercase tracking-wider text-muted">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @monitors.each do |monitor| %>
            <tr id="<%= dom_id(monitor) %>" class="table-row transition-all">
              <td class="px-5 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <span class="status-indicator <%= monitor.status == 'up' ? 'status-indicator-success' : (monitor.status == 'degraded' ? 'status-indicator-warning' : (monitor.status == 'paused' ? 'status-indicator-neutral' : 'status-indicator-error')) %>"></span>
                  <div class="min-w-0">
                    <%= link_to monitor.name, dashboard_project_monitor_path(@project, monitor), class: "text-[14px] font-medium hover:opacity-70 transition-opacity text-primary" %>
                    <p class="text-[12px] truncate max-w-[200px] text-muted"><%= monitor.url || monitor.host %></p>
                  </div>
                </div>
              </td>
              <td class="px-5 py-4 whitespace-nowrap">
                <span class="px-2.5 py-1 text-[11px] font-medium rounded-lg badge-neutral">
                  <%= monitor.check_type.upcase %>
                </span>
              </td>
              <td class="px-5 py-4 whitespace-nowrap">
                <span class="badge <%= monitor.status == 'up' ? 'badge-success' : (monitor.status == 'degraded' ? 'badge-warning' : (monitor.status == 'paused' ? 'badge-neutral' : 'badge-error')) %>">
                  <%= monitor.status.humanize %>
                </span>
              </td>
              <td class="px-5 py-4 whitespace-nowrap text-[13px] text-secondary">
                <% if monitor.last_response_time %>
                  <%= monitor.last_response_time %>ms
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-5 py-4 whitespace-nowrap text-[13px] text-secondary">
                <% if monitor.last_check_at %>
                  <%= time_ago_in_words(monitor.last_check_at) %> ago
                <% else %>
                  Never
                <% end %>
              </td>
              <td class="px-5 py-4 whitespace-nowrap text-right">
                <div class="flex justify-end items-center gap-3">
                  <% if monitor.paused? %>
                    <%= button_to "Resume", resume_dashboard_project_monitor_path(@project, monitor), method: :post, class: "text-[13px] font-medium transition-opacity hover:opacity-70 action-link-success" %>
                  <% else %>
                    <%= button_to "Pause", pause_dashboard_project_monitor_path(@project, monitor), method: :post, class: "text-[13px] font-medium transition-opacity hover:opacity-70 action-link-muted" %>
                  <% end %>
                  <%= link_to "Edit", edit_dashboard_project_monitor_path(@project, monitor), class: "text-[13px] font-medium transition-opacity hover:opacity-70 action-link" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-16">
        <div class="w-16 h-16 mx-auto rounded-2xl flex items-center justify-center empty-state-icon">
          <svg class="w-8 h-8" style="color: var(--accent-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
        <h3 class="mt-4 text-[15px] font-medium text-primary">No monitors yet</h3>
        <p class="mt-1 text-[13px] text-muted">Get started by creating your first monitor.</p>
        <div class="mt-6">
          <%= link_to new_dashboard_project_monitor_path(@project), class: "btn-primary inline-flex items-center gap-2 px-5 py-2.5 text-[13px] font-medium rounded-xl transition-all text-white" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add Monitor
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
