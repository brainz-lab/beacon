<% content_for(:title) { @monitor.name } %>

<div class="space-y-6" data-controller="monitor" data-monitor-id-value="<%= @monitor.id %>">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-3">
        <span class="h-3 w-3 rounded-full" style="background: <%= @monitor.status == 'up' ? '#10B981' : (@monitor.status == 'degraded' ? '#F59E0B' : (@monitor.status == 'paused' ? '#6B6760' : '#EF4444')) %>;"></span>
        <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;"><%= @monitor.name %></h1>
      </div>
      <p class="mt-1 text-[13px]" style="color: #8B8780;"><%= @monitor.url || "#{@monitor.host}:#{@monitor.port}" %></p>
    </div>
    <div class="flex items-center gap-2">
      <%= button_to "Check Now", check_now_dashboard_project_monitor_path(@project, @monitor), method: :post, class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
      <% if @monitor.paused? %>
        <%= button_to "Resume", resume_dashboard_project_monitor_path(@project, @monitor), method: :post, class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #10B981; color: #FFFFFE;" %>
      <% else %>
        <%= button_to "Pause", pause_dashboard_project_monitor_path(@project, @monitor), method: :post, class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #6B6760; color: #FFFFFE;" %>
      <% end %>
      <%= link_to "Edit", edit_dashboard_project_monitor_path(@project, @monitor), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Status</p>
      <div class="mt-1">
        <span class="px-2 py-0.5 text-[12px] font-medium rounded-full" style="<%= @monitor.status == 'up' ? 'background: #E8F5E8; color: #2D5A2D;' : (@monitor.status == 'degraded' ? 'background: #FEF3C7; color: #92400E;' : (@monitor.status == 'paused' ? 'background: #F5F4F2; color: #6B6760;' : 'background: #FEE8E8; color: #8B2D2D;')) %>">
          <%= @monitor.status.humanize %>
        </span>
      </div>
    </div>
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Uptime (24h)</p>
      <p class="mt-1 text-[28px] font-semibold" style="color: #1A1A1A;"><%= @uptime_calculator.uptime_percentage(24.hours) %>%</p>
    </div>
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Uptime (30d)</p>
      <p class="mt-1 text-[28px] font-semibold" style="color: #1A1A1A;"><%= @uptime_calculator.uptime_percentage(30.days) %>%</p>
    </div>
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <p class="text-[13px] font-medium" style="color: #8B8780;">Avg Response</p>
      <p class="mt-1 text-[28px] font-semibold" style="color: #1A1A1A;"><%= @uptime_calculator.average_response_time(24.hours) %>ms</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Response Time Chart -->
      <div class="rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <div class="px-5 py-4" style="border-bottom: 1px solid #E8E5E0;">
          <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Response Time</h2>
        </div>
        <div class="p-6" data-controller="response-chart" data-response-chart-monitor-value="<%= @monitor.id %>">
          <canvas id="response-chart" height="200"></canvas>
        </div>
      </div>

      <!-- Recent Checks -->
      <div class="rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <div class="px-5 py-4" style="border-bottom: 1px solid #E8E5E0;">
          <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Recent Checks</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead style="background: #FAF9F7;">
              <tr>
                <th class="px-5 py-3 text-left text-[11px] font-medium uppercase" style="color: #8B8780;">Time</th>
                <th class="px-5 py-3 text-left text-[11px] font-medium uppercase" style="color: #8B8780;">Status</th>
                <th class="px-5 py-3 text-left text-[11px] font-medium uppercase" style="color: #8B8780;">Response</th>
                <th class="px-5 py-3 text-left text-[11px] font-medium uppercase" style="color: #8B8780;">Region</th>
              </tr>
            </thead>
            <tbody id="checks-list">
              <% @recent_checks.each do |check| %>
                <tr class="hover:bg-[#FAF9F7] transition-colors" style="border-bottom: 1px solid #E8E5E0;">
                  <td class="px-5 py-3 text-[13px]" style="color: #6B6760;">
                    <%= check.checked_at.strftime("%H:%M:%S") %>
                  </td>
                  <td class="px-5 py-3">
                    <span class="px-2 py-0.5 text-[11px] font-medium rounded-full" style="<%= check.success? ? 'background: #E8F5E8; color: #2D5A2D;' : 'background: #FEE8E8; color: #8B2D2D;' %>">
                      <%= check.success? ? 'OK' : 'FAIL' %>
                    </span>
                  </td>
                  <td class="px-5 py-3 text-[13px]" style="color: #6B6760;">
                    <%= check.response_time %>ms
                  </td>
                  <td class="px-5 py-3 text-[13px]" style="color: #6B6760;">
                    <%= check.region&.upcase %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Configuration -->
      <div class="rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <div class="px-5 py-4" style="border-bottom: 1px solid #E8E5E0;">
          <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Configuration</h2>
        </div>
        <div class="divide-y" style="border-color: #E8E5E0;">
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px]" style="color: #8B8780;">Type</span>
            <span class="text-[13px] font-medium" style="color: #1A1A1A;"><%= @monitor.check_type.upcase %></span>
          </div>
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px]" style="color: #8B8780;">Interval</span>
            <span class="text-[13px] font-medium" style="color: #1A1A1A;"><%= @monitor.interval %>s</span>
          </div>
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px]" style="color: #8B8780;">Timeout</span>
            <span class="text-[13px] font-medium" style="color: #1A1A1A;"><%= @monitor.timeout / 1000.0 %>s</span>
          </div>
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px]" style="color: #8B8780;">Regions</span>
            <span class="text-[13px] font-medium" style="color: #1A1A1A;"><%= @monitor.regions.join(", ").upcase %></span>
          </div>
        </div>
      </div>

      <!-- Recent Incidents -->
      <div class="rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <div class="px-5 py-4" style="border-bottom: 1px solid #E8E5E0;">
          <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Recent Incidents</h2>
        </div>
        <div class="px-5 py-4">
          <% if @incidents.any? %>
            <div class="space-y-3">
              <% @incidents.each do |incident| %>
                <a href="<%= dashboard_project_incident_path(@project, incident) %>" class="block hover:opacity-80 transition-opacity">
                  <p class="text-[14px] font-medium" style="color: #1A1A1A;"><%= incident.title %></p>
                  <p class="text-[12px]" style="color: #8B8780;">
                    <%= incident.started_at.strftime("%b %d, %H:%M") %> &middot; <%= incident.resolved? ? "Resolved" : "Active" %>
                  </p>
                </a>
              <% end %>
            </div>
          <% else %>
            <p class="text-[13px] text-center py-4" style="color: #8B8780;">No recent incidents</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
