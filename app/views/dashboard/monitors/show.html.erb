<% content_for(:title) { @monitor.name } %>

<div class="space-y-6" data-controller="monitor" data-monitor-id-value="<%= @monitor.id %>">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-3">
        <span class="h-3 w-3 rounded-full status-indicator <%= @monitor.status == 'up' ? 'status-indicator-success' : (@monitor.status == 'degraded' ? 'status-indicator-warning' : (@monitor.status == 'paused' ? 'status-indicator-neutral' : 'status-indicator-error')) %>"></span>
        <h1 class="text-[22px] font-semibold tracking-tight text-primary"><%= @monitor.name %></h1>
      </div>
      <p class="mt-1 text-[13px] text-muted"><%= @monitor.url || "#{@monitor.host}:#{@monitor.port}" %></p>
    </div>
    <div class="flex items-center gap-2">
      <%= button_to "Check Now", check_now_dashboard_project_monitor_path(@project, @monitor), method: :post, class: "px-4 py-2.5 text-[13px] font-medium rounded-xl transition-all btn-secondary" %>
      <% if @monitor.paused? %>
        <%= button_to "Resume", resume_dashboard_project_monitor_path(@project, @monitor), method: :post, class: "px-4 py-2.5 text-[13px] font-medium rounded-xl transition-all btn-success" %>
      <% else %>
        <%= button_to "Pause", pause_dashboard_project_monitor_path(@project, @monitor), method: :post, class: "px-4 py-2.5 text-[13px] font-medium rounded-xl transition-all btn-neutral" %>
      <% end %>
      <%= link_to "Edit", edit_dashboard_project_monitor_path(@project, @monitor), class: "btn-primary px-4 py-2.5 text-[13px] font-medium rounded-xl transition-all text-white" %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="px-5 py-4 rounded-xl card card-hover transition-all">
      <p class="text-[13px] font-medium text-muted">Status</p>
      <div class="mt-2">
        <span class="badge <%= @monitor.status == 'up' ? 'badge-success' : (@monitor.status == 'degraded' ? 'badge-warning' : (@monitor.status == 'paused' ? 'badge-neutral' : 'badge-error')) %>">
          <%= @monitor.status.humanize %>
        </span>
      </div>
    </div>
    <div class="px-5 py-4 rounded-xl card card-hover transition-all">
      <p class="text-[13px] font-medium text-muted">Uptime (24h)</p>
      <p class="mt-1 text-[28px] font-semibold text-primary"><%= @uptime_calculator.uptime_percentage(24.hours) %>%</p>
    </div>
    <div class="px-5 py-4 rounded-xl card card-hover transition-all">
      <p class="text-[13px] font-medium text-muted">Uptime (30d)</p>
      <p class="mt-1 text-[28px] font-semibold text-primary"><%= @uptime_calculator.uptime_percentage(30.days) %>%</p>
    </div>
    <div class="px-5 py-4 rounded-xl card card-hover transition-all">
      <p class="text-[13px] font-medium text-muted">Avg Response</p>
      <p class="mt-1 text-[28px] font-semibold text-primary"><%= @uptime_calculator.average_response_time(24.hours) %>ms</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Response Time Chart -->
      <div class="rounded-xl card card-hover transition-all">
        <div class="px-5 py-4 divider" style="border-bottom-width: 1px; border-bottom-style: solid;">
          <h2 class="text-[15px] font-semibold text-primary">Response Time</h2>
        </div>
        <div class="p-6" data-controller="response-chart" data-response-chart-monitor-value="<%= @monitor.id %>">
          <canvas id="response-chart" height="200"></canvas>
        </div>
      </div>

      <!-- Recent Checks -->
      <div class="rounded-xl card card-hover transition-all">
        <div class="px-5 py-4 divider" style="border-bottom-width: 1px; border-bottom-style: solid;">
          <h2 class="text-[15px] font-semibold text-primary">Recent Checks</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="table-header">
              <tr>
                <th class="px-5 py-3 text-left text-[11px] font-semibold uppercase text-muted">Time</th>
                <th class="px-5 py-3 text-left text-[11px] font-semibold uppercase text-muted">Status</th>
                <th class="px-5 py-3 text-left text-[11px] font-semibold uppercase text-muted">Response</th>
                <th class="px-5 py-3 text-left text-[11px] font-semibold uppercase text-muted">Region</th>
              </tr>
            </thead>
            <tbody id="checks-list">
              <% @recent_checks.each do |check| %>
                <tr class="table-row transition-all">
                  <td class="px-5 py-3 text-[13px] text-secondary">
                    <%= check.checked_at.strftime("%H:%M:%S") %>
                  </td>
                  <td class="px-5 py-3">
                    <span class="badge <%= check.success? ? 'badge-success' : 'badge-error' %>">
                      <%= check.success? ? 'OK' : 'FAIL' %>
                    </span>
                  </td>
                  <td class="px-5 py-3 text-[13px] text-secondary">
                    <%= check.response_time %>ms
                  </td>
                  <td class="px-5 py-3 text-[13px] text-secondary">
                    <%= check.region&.upcase %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Configuration -->
      <div class="rounded-xl card card-hover transition-all">
        <div class="px-5 py-4 divider" style="border-bottom-width: 1px; border-bottom-style: solid;">
          <h2 class="text-[15px] font-semibold text-primary">Configuration</h2>
        </div>
        <div class="divide-y divider">
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px] text-muted">Type</span>
            <span class="text-[13px] font-medium text-primary"><%= @monitor.check_type.upcase %></span>
          </div>
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px] text-muted">Interval</span>
            <span class="text-[13px] font-medium text-primary"><%= @monitor.interval %>s</span>
          </div>
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px] text-muted">Timeout</span>
            <span class="text-[13px] font-medium text-primary"><%= @monitor.timeout / 1000.0 %>s</span>
          </div>
          <div class="px-5 py-3 flex justify-between">
            <span class="text-[13px] text-muted">Regions</span>
            <span class="text-[13px] font-medium text-primary"><%= @monitor.regions.join(", ").upcase %></span>
          </div>
        </div>
      </div>

      <!-- Recent Incidents -->
      <div class="rounded-xl card card-hover transition-all">
        <div class="px-5 py-4 divider" style="border-bottom-width: 1px; border-bottom-style: solid;">
          <h2 class="text-[15px] font-semibold text-primary">Recent Incidents</h2>
        </div>
        <div class="px-5 py-4">
          <% if @incidents.any? %>
            <div class="space-y-3">
              <% @incidents.each do |incident| %>
                <a href="<%= dashboard_project_incident_path(@project, incident) %>" class="block hover:opacity-80 transition-opacity">
                  <p class="text-[14px] font-medium text-primary"><%= incident.title %></p>
                  <p class="text-[12px] text-muted">
                    <%= incident.started_at.strftime("%b %d, %H:%M") %> &middot; <%= incident.resolved? ? "Resolved" : "Active" %>
                  </p>
                </a>
              <% end %>
            </div>
          <% else %>
            <p class="text-[13px] text-center py-4 text-muted">No recent incidents</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
