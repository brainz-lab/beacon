<% content_for(:title) { @monitor.name } %>

<div class="space-y-6" data-controller="monitor" data-monitor-id-value="<%= @monitor.id %>">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <div class="flex items-center">
        <span class="h-4 w-4 rounded-full mr-3 <%= status_dot_class(@monitor.status) %>"></span>
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl"><%= @monitor.name %></h2>
      </div>
      <p class="mt-1 text-sm text-gray-500"><%= @monitor.url || "#{@monitor.host}:#{@monitor.port}" %></p>
    </div>
    <div class="mt-4 flex space-x-2 md:ml-4 md:mt-0">
      <%= button_to "Check Now", check_now_dashboard_monitor_path(@monitor), method: :post, class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <% if @monitor.paused? %>
        <%= button_to "Resume", resume_dashboard_monitor_path(@monitor), method: :post, class: "inline-flex items-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500" %>
      <% else %>
        <%= button_to "Pause", pause_dashboard_monitor_path(@monitor), method: :post, class: "inline-flex items-center rounded-md bg-gray-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-500" %>
      <% end %>
      <%= link_to "Edit", edit_dashboard_monitor_path(@monitor), class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-4">
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1">
        <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium <%= status_badge_class(@monitor.status) %>">
          <%= @monitor.status.humanize %>
        </span>
      </dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Uptime (24h)</dt>
      <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @uptime_calculator.uptime_percentage(24.hours) %>%</dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Uptime (30d)</dt>
      <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @uptime_calculator.uptime_percentage(30.days) %>%</dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Avg Response</dt>
      <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @uptime_calculator.average_response_time(24.hours) %>ms</dd>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Monitor Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Response Time Chart -->
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Response Time</h3>
        </div>
        <div class="p-6" data-controller="response-chart" data-response-chart-monitor-value="<%= @monitor.id %>">
          <canvas id="response-chart" height="200"></canvas>
        </div>
      </div>

      <!-- Recent Checks -->
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Recent Checks</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Response</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Region</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="checks-list">
              <% @recent_checks.each do |check| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= check.checked_at.strftime("%H:%M:%S") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= check.success? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= check.success? ? 'OK' : 'FAIL' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= check.response_time %>ms
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= check.region&.upcase %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Configuration -->
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Configuration</h3>
        </div>
        <dl class="divide-y divide-gray-200">
          <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Type</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @monitor.check_type.upcase %></dd>
          </div>
          <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Interval</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @monitor.interval %>s</dd>
          </div>
          <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Timeout</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @monitor.timeout / 1000.0 %>s</dd>
          </div>
          <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Regions</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= @monitor.regions.join(", ").upcase %></dd>
          </div>
        </dl>
      </div>

      <!-- Recent Incidents -->
      <div class="overflow-hidden rounded-lg bg-white shadow">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Recent Incidents</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <% if @incidents.any? %>
            <ul class="divide-y divide-gray-200">
              <% @incidents.each do |incident| %>
                <li class="py-3">
                  <%= link_to incident.title, dashboard_incident_path(incident), class: "text-sm font-medium text-gray-900 hover:text-emerald-600" %>
                  <p class="text-xs text-gray-500">
                    <%= incident.started_at.strftime("%b %d, %H:%M") %>
                    â€¢ <%= incident.resolved? ? "Resolved" : "Active" %>
                  </p>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500 text-center py-4">No recent incidents</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
