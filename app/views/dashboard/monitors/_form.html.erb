<%= form_with model: [@project, monitor], url: monitor.persisted? ? dashboard_project_monitor_path(@project, monitor) : dashboard_project_monitors_path(@project), class: "space-y-6 p-6 rounded-xl card" do |f| %>
  <% if monitor.errors.any? %>
    <div class="p-4 rounded-xl incident-card">
      <h3 class="text-[13px] font-medium" style="color: var(--status-error-dark);"><%= pluralize(monitor.errors.count, "error") %> prohibited this monitor from being saved:</h3>
      <ul class="mt-2 list-disc pl-5 space-y-1">
        <% monitor.errors.full_messages.each do |message| %>
          <li class="text-[13px]" style="color: var(--status-error);"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-[13px] font-medium mb-1.5 form-label" %>
    <%= f.text_field :name, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "My API Monitor" %>
  </div>

  <div>
    <%= f.label :check_type, "Monitor Type", class: "block text-[13px] font-medium mb-1.5 form-label" %>
    <%= f.select :check_type, [["HTTP/HTTPS", "http"], ["SSL Certificate", "ssl"], ["DNS", "dns"], ["TCP Port", "tcp"], ["Ping (ICMP)", "ping"]],
        {}, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input",
        data: { action: "change->monitor-form#toggleFields" } %>
  </div>

  <!-- HTTP Fields -->
  <div id="http-fields" class="space-y-4" data-monitor-form-target="httpFields">
    <div>
      <%= f.label :url, class: "block text-[13px] font-medium mb-1.5 form-label" %>
      <%= f.url_field :url, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "https://api.example.com/health" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :http_method, "Method", class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.select :http_method, ["GET", "POST", "HEAD", "PUT", "PATCH", "DELETE"], {}, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input" %>
      </div>
      <div>
        <%= f.label :expected_status, "Expected Status", class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.number_field :expected_status, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "200" %>
      </div>
    </div>

    <div>
      <%= f.label :expected_body, "Expected Body (optional)", class: "block text-[13px] font-medium mb-1.5 form-label" %>
      <%= f.text_field :expected_body, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "Text that must appear in response" %>
    </div>

    <div class="flex items-center gap-6">
      <div class="flex items-center gap-2.5">
        <%= f.check_box :follow_redirects, class: "h-4 w-4 rounded accent-orange-600 form-input" %>
        <%= f.label :follow_redirects, "Follow redirects", class: "text-[13px] text-secondary" %>
      </div>
      <div class="flex items-center gap-2.5">
        <%= f.check_box :verify_ssl, class: "h-4 w-4 rounded accent-orange-600 form-input" %>
        <%= f.label :verify_ssl, "Verify SSL", class: "text-[13px] text-secondary" %>
      </div>
    </div>
  </div>

  <!-- TCP/DNS/Ping Fields -->
  <div id="host-fields" class="space-y-4 hidden" data-monitor-form-target="hostFields">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :host, class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.text_field :host, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "example.com" %>
      </div>
      <div id="port-field">
        <%= f.label :port, class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.number_field :port, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "443" %>
      </div>
    </div>
  </div>

  <!-- DNS Fields -->
  <div id="dns-fields" class="space-y-4 hidden" data-monitor-form-target="dnsFields">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :dns_record_type, "Record Type", class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.select :dns_record_type, ["A", "AAAA", "CNAME", "MX", "TXT", "NS"], {}, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input" %>
      </div>
      <div>
        <%= f.label :expected_dns_result, "Expected Result", class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.text_field :expected_dns_result, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "1.2.3.4" %>
      </div>
    </div>
  </div>

  <!-- Common Settings -->
  <div class="pt-6 divider" style="border-top-width: 1px; border-top-style: solid;">
    <h4 class="text-[14px] font-semibold mb-4 text-primary">Check Settings</h4>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :interval, "Check Interval (seconds)", class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.select :interval, [[30, 30], [60, 60], [120, 120], [300, 300], [600, 600]], {}, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input" %>
      </div>
      <div>
        <%= f.label :timeout, "Timeout (ms)", class: "block text-[13px] font-medium mb-1.5 form-label" %>
        <%= f.number_field :timeout, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", placeholder: "30000" %>
      </div>
    </div>
  </div>

  <!-- Thresholds -->
  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :failure_threshold, "Failures before down", class: "block text-[13px] font-medium mb-1.5 form-label" %>
      <%= f.number_field :failure_threshold, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", min: 1, max: 10 %>
    </div>
    <div>
      <%= f.label :success_threshold, "Successes before up", class: "block text-[13px] font-medium mb-1.5 form-label" %>
      <%= f.number_field :success_threshold, class: "block w-full px-4 py-2.5 text-[13px] rounded-xl focus:outline-none transition-all form-input", min: 1, max: 10 %>
    </div>
  </div>

  <div class="flex items-center gap-2.5">
    <%= f.check_box :enabled, class: "h-4 w-4 rounded accent-orange-600 form-input" %>
    <%= f.label :enabled, "Start monitoring immediately", class: "text-[13px] text-secondary" %>
  </div>

  <div class="flex justify-end gap-3 pt-4">
    <%= link_to "Cancel", dashboard_project_monitors_path(@project), class: "px-5 py-2.5 text-[13px] font-medium rounded-xl transition-all btn-secondary" %>
    <%= f.submit monitor.persisted? ? "Update Monitor" : "Create Monitor", class: "btn-primary px-5 py-2.5 text-[13px] font-medium rounded-xl cursor-pointer transition-all text-white" %>
  </div>
<% end %>
