<%= form_with model: [:dashboard, monitor], class: "space-y-6 bg-white shadow rounded-lg p-6" do |f| %>
  <% if monitor.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(monitor.errors.count, "error") %> prohibited this monitor from being saved:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% monitor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "My API Monitor" %>
  </div>

  <div>
    <%= f.label :check_type, "Monitor Type", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :check_type, [["HTTP/HTTPS", "http"], ["SSL Certificate", "ssl"], ["DNS", "dns"], ["TCP Port", "tcp"], ["Ping (ICMP)", "ping"]],
        {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm",
        data: { action: "change->monitor-form#toggleFields" } %>
  </div>

  <!-- HTTP Fields -->
  <div id="http-fields" class="space-y-4" data-monitor-form-target="httpFields">
    <div>
      <%= f.label :url, class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "https://api.example.com/health" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :http_method, "Method", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :http_method, ["GET", "POST", "HEAD", "PUT", "PATCH", "DELETE"], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :expected_status, "Expected Status", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :expected_status, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "200" %>
      </div>
    </div>

    <div>
      <%= f.label :expected_body, "Expected Body (optional)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :expected_body, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "Text that must appear in response" %>
    </div>

    <div class="flex items-center space-x-6">
      <div class="flex items-center">
        <%= f.check_box :follow_redirects, class: "h-4 w-4 rounded border-gray-300 text-emerald-600 focus:ring-emerald-500" %>
        <%= f.label :follow_redirects, "Follow redirects", class: "ml-2 block text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.check_box :verify_ssl, class: "h-4 w-4 rounded border-gray-300 text-emerald-600 focus:ring-emerald-500" %>
        <%= f.label :verify_ssl, "Verify SSL", class: "ml-2 block text-sm text-gray-700" %>
      </div>
    </div>
  </div>

  <!-- TCP/DNS/Ping Fields -->
  <div id="host-fields" class="space-y-4 hidden" data-monitor-form-target="hostFields">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :host, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :host, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "example.com" %>
      </div>
      <div id="port-field">
        <%= f.label :port, class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :port, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "443" %>
      </div>
    </div>
  </div>

  <!-- DNS Fields -->
  <div id="dns-fields" class="space-y-4 hidden" data-monitor-form-target="dnsFields">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :dns_record_type, "Record Type", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :dns_record_type, ["A", "AAAA", "CNAME", "MX", "TXT", "NS"], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :expected_dns_result, "Expected Result", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :expected_dns_result, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "1.2.3.4" %>
      </div>
    </div>
  </div>

  <!-- Common Settings -->
  <div class="border-t border-gray-200 pt-6">
    <h4 class="text-sm font-medium text-gray-900 mb-4">Check Settings</h4>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :interval, "Check Interval (seconds)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :interval, [[30, 30], [60, 60], [120, 120], [300, 300], [600, 600]], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :timeout, "Timeout (ms)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :timeout, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", placeholder: "30000" %>
      </div>
    </div>
  </div>

  <!-- Thresholds -->
  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= f.label :failure_threshold, "Failures before down", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :failure_threshold, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", min: 1, max: 10 %>
    </div>
    <div>
      <%= f.label :success_threshold, "Successes before up", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :success_threshold, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-emerald-500 focus:ring-emerald-500 sm:text-sm", min: 1, max: 10 %>
    </div>
  </div>

  <div class="flex items-center">
    <%= f.check_box :enabled, class: "h-4 w-4 rounded border-gray-300 text-emerald-600 focus:ring-emerald-500" %>
    <%= f.label :enabled, "Start monitoring immediately", class: "ml-2 block text-sm text-gray-700" %>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <%= link_to "Cancel", dashboard_monitors_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= f.submit monitor.persisted? ? "Update Monitor" : "Create Monitor", class: "rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 cursor-pointer" %>
  </div>
<% end %>
