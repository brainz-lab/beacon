<% content_for(:title) { "Edit #{@monitor.name}" } %>

<div class="max-w-2xl mx-auto space-y-6">
  <div>
    <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Edit Monitor</h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Update monitor configuration</p>
  </div>

  <%= render "form", monitor: @monitor %>

  <div class="p-6 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
    <h3 class="text-[14px] font-medium" style="color: #8B2D2D;">Danger Zone</h3>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Deleting this monitor will remove all check history and incidents.</p>
    <div class="mt-4">
      <%= button_to "Delete Monitor", dashboard_project_monitor_path(@project, @monitor),
          method: :delete,
          data: { turbo_confirm: "Are you sure? This will delete all check history." },
          class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors",
          style: "background: #FEE8E8; color: #8B2D2D;" %>
    </div>
  </div>
</div>
