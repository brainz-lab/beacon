.DS_Store

# IDE
.idea/
.vscode/
*.swp
*.swo

# Test coverage
/coverage/

# Vendor bundle
/vendor/bundle

# Database dumps
*.sql
!db/structure.sql
*.dump

# Local development
.byebug_history
.irb_history

# Node modules (if not already present)
/node_modules


# Test coverage
coverage/

